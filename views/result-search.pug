extends layouts/default.pug 

block main 
    container.mx-auto.px-4
        //- Tiêu đề kết quả
        h1.text-2xl.mb-6 
            | Kết quả tìm kiếm cho: 
            span.font-bold.text-primary "#{keyword}"
        
        //- Kiểm tra xem có kết quả không
        if products.length > 0
            .grid.grid-cols-2.md.grid-cols-4.gap-4
            each item in products
                .bg-white.p-3.rounded.shadow.hover-shadow-md.transition
                img.w-full.h-40.object-cover.mb-2(src=item.image alt=item.name)
                h3.text-sm.font-medium.line-clamp-2= item.name
                p.text-orange-500.font-bold.mt-1= item.price
        else
            .text-center.py-12
            p.text-gray-500 Rất tiếc, không tìm thấy sản phẩm nào phù hợp.
            a.text-blue-500.underline(href="/") Quay lại trang chủ
block scripts
  script(src="/js/search.js")