doctype html
html
  head
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1.0' name='viewport')
    title Đăng nhập hệ thống
    
    //- Tailwind CSS
    script(src='https://cdn.tailwindcss.com?plugins=forms,container-queries')
    //- Fonts & Icons
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap' rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap' rel='stylesheet')
    
    //- Config Tailwind
    script.
      tailwind.config = {
        theme: {
          extend: {
            colors: { "primary": "#ec8a13" },
            fontFamily: { "display": ["Inter", "sans-serif"] }
          }
        }
      }

  body.bg-gray-50
    main.flex.min-h-screen.flex-col.justify-center.items-center.px-4.py-12
      .w-full.bg-white.p-8.rounded-xl.shadow-lg.border.max-w-md
        //- Tiêu đề
        .mb-8.text-center
          h1.text-3xl.font-bold.text-gray-900 Đăng nhập
          p.mt-2.text-sm.text-gray-500 Chào mừng quay trở lại

        //- FORM
        form.space-y-6
          //- Username
          .flex.flex-col.gap-2
            label.font-medium.text-gray-900 Tên đăng nhập
            input#usernameId.form-input.w-full.rounded-lg.border.border-gray-300.p-3(
              type='text' 
              placeholder='Nhập tên đăng nhập'
            )

          //- Password
          .flex.flex-col.gap-2
            label.font-medium.text-gray-900 Mật khẩu
            input#passwordId.form-input.w-full.rounded-lg.border.border-gray-300.p-3(
              type='password' 
              placeholder='Nhập mật khẩu'
            )

          //- Nút Đăng nhập (QUAN TRỌNG: ID phải đúng)
          button#btnDangNhap.w-full.rounded-lg.bg-primary.p-3.text-white.font-bold.shadow-lg.transition(
            type='button'
            class='hover:bg-orange-600'
          ) Đăng nhập

          //- Thông báo lỗi (Mặc định ẩn đi bằng class hidden)
          #errormes.hidden.flex.items-center.justify-center.gap-2.bg-red-50.p-3.rounded-lg.text-red-600.border.border-red-100
            span.material-symbols-outlined error
            p.text-sm.font-medium Vui lòng điền đầy đủ thông tin

    //- Script xử lý logic
  script(src='/js/login.js')